@model List<UserFile>

<h1>Files</h1>



<table class="table table-striped">

    <thead>
        <tr>
            <th>File Name</th>
            <th>Created Date</th>
            <th>File Status</th>
            <th>Download</th>
        </tr>
    </thead>


   <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.FileName</td>
                <td>@item.CreatedDate.ToString()</td>
                <td>@item.FileStatus</td>
                <td>

                    <a href="~/files/@item.FilePath" class="btn btn-primary @(item.FileStatus==FileStatus.Creatting ? "disabled" : "")">Download </a>
                </td>
            </tr>
        }
   </tbody>

</table>